<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="5dp"
    app:cardCornerRadius="10dp"
    android:layout_marginVertical="10dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="10dp">

    <LinearLayout
        android:id="@+id/CardViewLinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/CardViewImage1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:padding="20dp"
            android:src="@drawable/pancakes"
            android:background="#8BE1EC" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="5dp">

            <RelativeLayout
                android:id="@+id/CardViewRelativeLayout1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/CardViewItemNameText1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Item Name"
                    android:textSize="12dp"
                    android:layout_marginBottom="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_below="@id/CardViewItemNameText1"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/location_pin" />
                    <TextView
                        android:id="@+id/CardViewCityText1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Islamabad"
                        android:textSize="12dp"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/CardViewRelativeLayout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.7"
                android:gravity="right">
                <TextView
                    android:id="@+id/CardViewHourText1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="$60/hr"
                    android:textSize="12dp"
                    android:layout_marginBottom="10dp"
                    android:textStyle="bold"
                    android:textColor="#EE8205"/>
                <TextView
                    android:id="@+id/CardViewDateText1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/CardViewHourText1"
                    android:text="7th March"
                    android:textSize="12dp"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
